# ===========================================
# Monitoring in a Box - Environment Variables
# ===========================================
# Copy this file to .env and customize the values for your environment
# IMPORTANT: Change all default passwords and secrets before production use!

# ===========================================
# üåê Site Configuration
# ===========================================
SITE_NAME="DevOps Monitoring Dashboard"
SITE_URL="http://localhost:4000"
SITE_DESCRIPTION="Comprehensive DevOps monitoring solution"
SITE_VERSION="1.0.0"

# SEO Configuration
SEO_TITLE="DevOps Monitoring Dashboard - Modern Infrastructure Monitoring"
SEO_DESCRIPTION="Comprehensive DevOps monitoring solution with real-time metrics, centralized logging, and intelligent alerting"
SEO_KEYWORDS="devops,monitoring,infrastructure,metrics,alerts,prometheus,grafana,loki"
SEO_AUTHOR="DevOps Monitoring Team"
SEO_ROBOTS="index,follow"
SEO_CANONICAL="http://localhost:4000"

# ===========================================
# üîê Authentication & Security
# ===========================================
# Required: Generate a secure secret key - CHANGE IN PRODUCTION!
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="change-this-super-secret-key-in-production-32-chars-min"
NEXTAUTH_URL="http://localhost:4000"

# Database Configuration
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - Uncomment and configure
# DATABASE_URL="postgresql://monitoring_user:secure_password@localhost:5432/monitoring"

# Session Configuration
SESSION_MAX_AGE="30d"
SESSION_UPDATE_AGE="1d"

# ===========================================
# üìä Monitoring Services - Security
# ===========================================
# Grafana Security - CHANGE DEFAULT PASSWORDS!
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="change-this-default-password"
GRAFANA_SECRET_KEY="change-this-grafana-secret-key"

# Alertmanager Security
ALERTMANAGER_ADMIN_USER="admin"
ALERTMANAGER_ADMIN_PASSWORD="change-this-alertmanager-password"

# ===========================================
# üìä Monitoring Services - Configuration
# ===========================================
# Prometheus Configuration
PROMETHEUS_URL="http://localhost:9090"
PROMETHEUS_RETENTION="15d"
PROMETHEUS_SCRAPE_INTERVAL="15s"

# Grafana Configuration
GRAFANA_URL="http://localhost:3000"

# Loki Configuration
LOKI_URL="http://localhost:3100"
LOKI_RETENTION="30d"

# Alertmanager Configuration
ALERTMANAGER_URL="http://localhost:9093"

# ===========================================
# üîî Notification Services
# ===========================================
# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="alerts@yourcompany.com"
EMAIL_TO="admin@yourcompany.com,team@yourcompany.com"

# Slack Configuration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
SLACK_CHANNEL="#alerts"
SLACK_USERNAME="DevOps Monitor"
SLACK_ICON_EMOJI=":bell:"

# Microsoft Teams Configuration
TEAMS_WEBHOOK_URL="https://outlook.office.com/webhook/YOUR-TEAMS-WEBHOOK"
TEAMS_TITLE="DevOps Monitor Alert"

# Discord Configuration
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"
DISCORD_USERNAME="DevOps Monitor"
DISCORD_AVATAR_URL=""

# PagerDuty Configuration
PAGERDUTY_ROUTING_KEY="your-pagerduty-routing-key"

# OpsGenie Configuration
OPSGENIE_API_KEY="your-opsgenie-api-key"

# VictorOps Configuration
VICTOROPS_API_KEY="your-victorops-api-key"
VICTOROPS_ROUTING_KEY="your-victorops-routing-key"

# ===========================================
# üé® UI Configuration
# ===========================================
# Theme Configuration
DEFAULT_THEME="system"
ENABLE_THEME_TOGGLE="true"

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL="15s"
DASHBOARD_MAX_METRICS="50"
DASHBOARD_DEFAULT_TIME_RANGE="1h"

# Logs Configuration
LOGS_DEFAULT_QUERY="{job=\"varlogs\"}"
LOGS_DEFAULT_LIMIT="100"
LOGS_REFRESH_INTERVAL="10s"

# ===========================================
# üîå Plugin System
# ===========================================
ENABLE_PLUGINS="true"
PLUGIN_DIRECTORY="./plugins"
PLUGIN_AUTO_LOAD="true"
PLUGIN_MARKETPLACE_URL="https://plugins.monitoring.com"
PLUGIN_UPDATE_CHECK="true"

# ===========================================
# üè¢ Multi-tenant Configuration
# ===========================================
ENABLE_MULTI_TENANT="true"
DEFAULT_TENANT="default"
TENANT_ISOLATION="strict"

# ===========================================
# üìà Analytics & Monitoring
# ===========================================
# Analytics
ENABLE_ANALYTICS="false"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="false"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ===========================================
# üóÑÔ∏è Database Configuration (Production)
# ===========================================
# PostgreSQL Configuration
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="monitoring"
DB_USER="monitoring_user"
DB_PASSWORD="secure_password"
DB_SSL="true"

# ===========================================
# üöÄ Deployment Configuration
# ===========================================
# Environment
NODE_ENV="development"
PORT="3000"
HOST="0.0.0.0"

# Docker Configuration
DOCKERHUB_USERNAME="yourusername"
DOCKER_REGISTRY="your-registry.com"
DOCKER_IMAGE_TAG="latest"

# Kubernetes Configuration
K8S_NAMESPACE="monitoring"
K8S_INGRESS_CLASS="nginx"

# ===========================================
# üîß Development Configuration
# ===========================================
# Enable development features
ENABLE_DEV_TOOLS="true"
ENABLE_DEBUG_LOGGING="true"
ENABLE_HOT_RELOAD="true"

# Development URLs (for local development)
DEV_PROMETHEUS_URL="http://localhost:9090"
DEV_GRAFANA_URL="http://localhost:3000"
DEV_LOKI_URL="http://localhost:3100"
DEV_ALERTMANAGER_URL="http://localhost:9093"

# ===========================================
# üîí Security Headers & CORS
# ===========================================
# CORS Configuration
CORS_ORIGIN="http://localhost:4000"
CORS_CREDENTIALS="true"

# Security Headers
ENABLE_SECURITY_HEADERS="true"
ENABLE_HELMET="true"

# ===========================================
# üìù Security Notes
# ===========================================
# IMPORTANT SECURITY REMINDERS:
# 1. CHANGE NEXTAUTH_SECRET - Generate with: openssl rand -base64 32
# 2. CHANGE GRAFANA_ADMIN_PASSWORD - Default is "admin"
# 3. CHANGE ALERTMANAGER_ADMIN_PASSWORD - Set a strong password
# 4. UPDATE all webhook URLs and notification credentials
# 5. SET proper CORS origins for production deployment
# 6. ENABLE SSL/TLS for production environments
# 7. CONFIGURE proper backup strategies for your database
# 8. SET up monitoring for the monitoring system itself
# 9. REVIEW and update all default passwords
# 10. CONFIGURE proper logging levels for production
# 11. SET up proper error tracking and alerting
# 12. USE environment variables instead of hardcoded secrets
# 13. ENABLE firewall rules to restrict access
# 14. IMPLEMENT rate limiting for API endpoints
# 15. USE VPN or private networks for admin access
