# ===========================================
# Monitoring in a Box - Environment Variables
# ===========================================
# Copy this file to .env and customize the values for your environment

# ===========================================
# üåê Site Configuration
# ===========================================
SITE_NAME="Monitoring in a Box"
SITE_URL="http://localhost:3000"
SITE_DESCRIPTION="Modern monitoring solution for your DevOps infrastructure"
SITE_VERSION="1.0.0"

# SEO Configuration
SEO_TITLE="Monitoring in a Box - Modern Infrastructure Monitoring"
SEO_DESCRIPTION="Comprehensive DevOps monitoring solution with real-time metrics, centralized logging, and intelligent alerting"
SEO_KEYWORDS="devops,monitoring,infrastructure,metrics,alerts,prometheus,grafana,loki"
SEO_AUTHOR="Monitoring in a Box Team"
SEO_ROBOTS="index,follow"
SEO_CANONICAL="http://localhost:3000"

# ===========================================
# üîê Authentication & Security
# ===========================================
# Required: Generate a secure secret key
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Database Configuration
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - Uncomment and configure
# DATABASE_URL="postgresql://monitoring_user:secure_password@localhost:5432/monitoring"

# Session Configuration
SESSION_MAX_AGE="30d"
SESSION_UPDATE_AGE="1d"

# ===========================================
# üìä Monitoring Services
# ===========================================
# Prometheus Configuration
PROMETHEUS_URL="http://localhost:9090"
PROMETHEUS_RETENTION="15d"
PROMETHEUS_SCRAPE_INTERVAL="15s"

# Grafana Configuration
GRAFANA_URL="http://localhost:3000"
GRAFANA_USER="admin"
GRAFANA_PASSWORD="admin"

# Loki Configuration
LOKI_URL="http://localhost:3100"
LOKI_RETENTION="30d"

# Alertmanager Configuration
ALERTMANAGER_URL="http://localhost:9093"

# ===========================================
# üîî Notification Services
# ===========================================
# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="alerts@yourcompany.com"
EMAIL_TO="admin@yourcompany.com"

# Slack Configuration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
SLACK_CHANNEL="#alerts"
SLACK_USERNAME="Monitoring Bot"
SLACK_ICON_EMOJI=":bell:"

# Microsoft Teams Configuration
TEAMS_WEBHOOK_URL="https://outlook.office.com/webhook/YOUR-TEAMS-WEBHOOK"
TEAMS_TITLE="Monitoring Alert"

# Discord Configuration
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"
DISCORD_USERNAME="Monitoring Bot"
DISCORD_AVATAR_URL="https://example.com/bot-avatar.png"

# ===========================================
# üé® UI Configuration
# ===========================================
# Theme Configuration
DEFAULT_THEME="system"
ENABLE_THEME_TOGGLE="true"

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL="15s"
DASHBOARD_MAX_METRICS="50"
DASHBOARD_DEFAULT_TIME_RANGE="1h"

# Logs Configuration
LOGS_DEFAULT_QUERY="{job=\"varlogs\"}"
LOGS_DEFAULT_LIMIT="100"
LOGS_REFRESH_INTERVAL="10s"

# ===========================================
# üîå Plugin System
# ===========================================
ENABLE_PLUGINS="true"
PLUGIN_DIRECTORY="./plugins"
PLUGIN_AUTO_LOAD="true"
PLUGIN_MARKETPLACE_URL="https://plugins.monitoring.com"
PLUGIN_UPDATE_CHECK="true"

# ===========================================
# üè¢ Multi-tenant Configuration
# ===========================================
ENABLE_MULTI_TENANT="true"
DEFAULT_TENANT="default"
TENANT_ISOLATION="strict"

# ===========================================
# üìà Analytics & Monitoring
# ===========================================
# Analytics
ENABLE_ANALYTICS="false"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="false"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ===========================================
# üóÑÔ∏è Database Configuration (Production)
# ===========================================
# PostgreSQL Configuration
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="monitoring"
DB_USER="monitoring_user"
DB_PASSWORD="secure_password"
DB_SSL="true"

# ===========================================
# üöÄ Deployment Configuration
# ===========================================
# Environment
NODE_ENV="development"
PORT="3000"
HOST="0.0.0.0"

# Docker Configuration
DOCKER_REGISTRY="your-registry.com"
DOCKER_IMAGE_TAG="latest"

# Kubernetes Configuration
K8S_NAMESPACE="monitoring"
K8S_INGRESS_CLASS="nginx"

# ===========================================
# üîß Development Configuration
# ===========================================
# Enable development features
ENABLE_DEV_TOOLS="true"
ENABLE_DEBUG_LOGGING="true"
ENABLE_HOT_RELOAD="true"

# Development URLs (for local development)
DEV_PROMETHEUS_URL="http://localhost:9090"
DEV_GRAFANA_URL="http://localhost:3000"
DEV_LOKI_URL="http://localhost:3100"
DEV_ALERTMANAGER_URL="http://localhost:9093"

# ===========================================
# üìù Notes
# ===========================================
# 1. Change NEXTAUTH_SECRET to a secure random string in production
# 2. Update database credentials for production use
# 3. Configure notification webhooks for your services
# 4. Set proper CORS origins for production deployment
# 5. Enable SSL/TLS for production environments
# 6. Configure proper backup strategies for your database
# 7. Set up monitoring for the monitoring system itself
# 8. Review and update all default passwords
# 9. Configure proper logging levels for production
# 10. Set up proper error tracking and alerting
